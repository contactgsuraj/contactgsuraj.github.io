---
import Bubble from "../components/Bubble.astro";

const links = [
  {
    icon: "fa-github",
    name: "GitHub",
    link: "https://github.com/g-suraj",
    border: "border-base09",
  },
  {
    icon: "fa-linkedin",
    name: "LinkedIn",
    link: "https://www.linkedin.com/in/g-suraj",
    border: "border-base08",
  },
  {
    icon: "fa-address-card",
    name: "Resume",
    link: "./files/cv.pdf",
    border: "border-base0C",
  },
];
---

<head>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
  />
</head>

<style></style>

<html>
  <body class="bg-base00 flex h-dvh">
    <div class="m-auto w-4/5 sm:w-2/3 lg:w-1/3">
      <div class="mx-auto my-10">
        <Bubble index="-1">
          <div class="flex flex-row items-center">
            <img
              class="flex-basis-3 h-36 w-36 border-4 border-base0C rounded-full"
              src="/me.png"
              alt="It's me"
            />
            <div class="flex-grow mx-8">
              <div class="text-lg my-1">Hi, I'm Suraj</div>
              <div class="text-xs">
                I'm a Senior Software Engineer at Bloomberg, working on making
                Developers more productive.
              </div>
            </div>
          </div>
        </Bubble>
      </div>

      <div class="grid grid-cols-3 gap-2 text-center">
        {
          links.map((link, index) => {
            return (
              <Bubble index={index} link={link["link"]} border={link["border"]}>
                <i class:list={["fa", link["icon"]]} /> {link["name"]}
              </Bubble>
            );
          })
        }
      </div>
    </div>
  </body>
</html>
